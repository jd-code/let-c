
vimtest: executable
	./executable

executable: source.o let-c.o
	g++  let-c.o source.o `pkg-config --libs sdl` `pkg-config --libs gl` -lpthread -lm -lrt -Wl,--wrap,main -o ./executable

source.o: source.cpp
	g++ -Wall `pkg-config --cflags sdl` `pkg-config --cflags gl` -c source.cpp

let-c.o: let-c.h let-c.cpp
	g++ -Wall `pkg-config --cflags sdl` `pkg-config --cflags gl` -c let-c.cpp

clean:
	rm -f let-c.o  source.o
	rm -f ./executable

